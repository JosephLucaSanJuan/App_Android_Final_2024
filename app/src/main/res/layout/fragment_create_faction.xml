<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_faction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.faction.CreateFactionFragment">

    <!--TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello" /-->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/create_faction_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Crear nueva facción"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:navigationIcon="@drawable/arrow_back_24px"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/faction_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/create_faction_fav"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_Input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/save_faction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/faction_name"
        android:text="Añadir Facción"/>

</androidx.constraintlayout.widget.ConstraintLayout>